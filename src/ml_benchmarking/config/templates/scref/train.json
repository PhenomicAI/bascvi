{
    "mode": "train",

    "wandb_project_name": "scref_train",
    "run_save_dir": "../runs/scref_train/",
    
    "datamodule": {
        "class_name": "TileDBSomaIterDataModule",
        "options": {
            "soma_experiment_uri": "/home/ubuntu/scREF_test/data/scREF_2025/",
            "train_column": "included_scref_train",
            "genes_to_use_path": "/home/ubuntu/scREF_test/bascvi/src/ml_benchmarking/data/genes_2ksamples_10cells.txt",
            "block_size": 1000,
            "calc_library": false,
            "random_seed": 42,
            "dataloader_args": {
                "batch_size": 64,
                "num_workers": 6,
                "pin_memory": true
            },
            "batch_keys": {
                "modality": "scrnaseq_protocol",
                "study": "study_name",
                "sample": "sample_idx"
            }
        }
    },
    "emb_trainer": {
        "module_name": "bascvi",
        "class_name": "BAScVI",

        "model_args": {
            "n_hidden": 512,
            "n_latent": 10,
            "n_layers": 4,
            "scaling_factor": 10000.0,
            "use_library": true,
            "use_batch_encoder": true
        },

        "training_args": {
            "kl_loss_weight": 1.0,
            "disc_loss_weight": 1000.0,

            "n_steps_kl_warmup": 10,
            "n_steps_discriminator_warmup": 10,
            "sigmoidal_disc_warmup": true, 

            "save_validation_umaps": true,
            "run_validation_metrics": false,

            "vae_optimizer": {
                "lr": 1e-4,
                "weight_decay": 1e-5
            },
            "discriminator_optimizer": {
                "lr": 1e-2,
                "weight_decay": 1e-5
            },
        
            "train_adversarial": true,
            "train_library": true,
            "reduce_lr_on_plateau": true
        },

        "callbacks_args": {
            "model_checkpoint": {
                "monitor": "val_loss/loss",
                "mode": "min"
            },
            "early_stopping": {
                "monitor": "val_loss/loss",
                "patience": 10,
                "mode": "min"
            }
        }
    }
}
