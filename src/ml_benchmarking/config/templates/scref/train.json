{
    "mode": "train",

    "wandb_project_name": "scref_train",
    "run_save_dir": "../runs/scref_train/",
    
    "datamodule": {
        "class_name": "TileDBSomaIterDataModule",
        "options": {
            "soma_experiment_uri": "s3://pai-scrnaseq/sctx_gui/corpora/scref_ml/",
            "train_column": "included_scref_train",
            "genes_to_use_path": "../data/gene_lists/genes_2ksamples_10cells.txt",
            "block_size": 100000,
            "calc_library": false,
            "random_seed": 42,
            "dataloader_args": {
                "batch_size": 64,
                "num_workers": 4,
                "pin_memory": true
            },
            "batch_keys": {
                "modality": "scrnaseq_protocol",
                "study": "study_name",
                "sample": "sample_idx"
            }
        }
    },
    "emb_trainer": {
        "module_name": "bascvi",
        "class_name": "BAScVI",

        "model_args": {
            "n_hidden": 512,
            "n_latent": 10,
            "n_layers": 4,
            "scaling_factor": 10000.0,
            "use_library": true,
            "use_batch_encoder": true
        },

        "training_args": {
            "kl_loss_weight": 1.0,
            "disc_loss_weight": 10.0,

            "n_steps_kl_warmup": 10000,

            "n_steps_discriminator_warmup": 100000,
            "sigmoidal_disc_warmup": true, 

            "save_validation_umaps": true,
            "run_validation_metrics": false,


            "vae_optimizer": {
                "lr": 1e-4,
                "weight_decay": 1e-5
              },
              "discriminator_optimizer": {
                "lr": 1e-4,
                "weight_decay": 1e-5
              },
        
              "train_adversarial": true,
              "train_library": true
        },

        "callbacks_args": {
            "model_checkpoint": {
                "monitor": "val_loss/loss",
                "mode": "min"
            },
            "early_stopping": {
                "monitor": "val_loss/loss",
                "patience": 5,
                "mode": "min"
            }
        },
        "pl_trainer": {
            "check_val_every_n_epoch": 2
        }
    }
}
