{
    "datamodule_class_name": "TileDBSomaIterDataModule",

    "datamodule": {
        "soma_experiment_uri": "s3://pai-scrnaseq/sctx_gui/corpora/scTx-v1.3.mm/",
        "barcodes_to_use_path": "/home/ubuntu/ml/bascvi/data/v1.3mm_train_barcodes.pkl",

        "block_size": 100000,
        "calc_library": true,

        "dataloader_args": {
            "batch_size": 64,
            "num_workers": 0,
            "pin_memory": true,
            "drop_last": false
        }
    },
    "load_from_checkpoint" : false,
    "trainer_module_name": "bascvi_trainer",
    "trainer_class_name": "BAScVITrainer",
    "emb_trainer": {
        "module_name": "bascvi",
        "class_name": "BAScVI",
        "model_args": {
            "n_hidden": 128,
            "n_latent": 10,
            "n_layers": 3,
            "dropout_rate": 0.1,
            "log_variational": false,
            "normalize_total": true,
            "scaling_factor": 1.0,
            "init_weights": false,
            "batch_emb_dim": 10,        
            "use_library": true,
            "use_batch_encoder": true
        },
        "training_args": {
            "n_epochs_discriminator_warmup": 5,
            "disc_loss_weight": 1000.0,
            "kl_loss_weight": 1.0,
            "lr_scheduler_metric": "train_loss",
            "save_validation_umaps": false,
            "optimizer": {
                "lr": 0.0001,
                "weight_decay": 1e-6,
                "eps": 0.01
            },
            "step_lr_scheduler": {
                "step_size": 100,
                "gamma": 0.1
            },
            "train_library": true,
            "train_adversarial": true
        },
        "callbacks_args": {
            "model_checkpoint": {
                "monitor": "val_loss",
                "mode": "min"
            },
            "early_stopping": {
                "monitor": "val_loss",
                "patience": 5,
                "mode": "min"
            }
        }
    },
    "pl_trainer": {
        "max_epochs": 200,
        "accelerator": "gpu",
        "devices": 1,
        "check_val_every_n_epoch": 1,
        "deterministic": true,
        "num_sanity_val_steps": -1
    }
}
