{
    "mode": "train",

    "run_save_dir": "./runs/scref_plus_mu_macrogenes_small/",
    
    "datamodule": {
        "class_name": "TileDBSomaIterDataModule",
        "options": {
            "soma_experiment_uri": "s3://pai-scrnaseq/sctx_gui/corpora/combined_scref_no_ortho/",
            "barcodes_to_use_path": "/home/ubuntu/paper_repo/bascvi/data/human_mouse_train_small.pkl",
            "genes_to_use_path": "/home/ubuntu/paper_repo/bascvi/data/human_mouse_genes_to_use_macrogenes.txt",
            "block_size": 20000,
            "calc_library": true,
            "random_seed": 42,
            "dataloader_args": {
                "batch_size": 64,
                "num_workers": 4,
                "pin_memory": true
            }
        }
    },
    "emb_trainer": {
        "module_name": "bascvi",
        "class_name": "BAScVI",
        "use_macrogenes": true,
        "model_args": {
            "n_hidden": 512,
            "n_latent": 10,
            "n_layers": 2,
            "scaling_factor": 1.0,
            "init_weights": false,
            "use_library": true,
            "use_batch_encoder": true
        },
        "training_args": {
            "n_steps_discriminator_warmup": 50000,
            "n_steps_kl_warmup": 50000,
            "disc_loss_weight": 100000.0,
            "kl_loss_weight": 1.0,
            "lr_scheduler_metric": "train_loss",
            "save_validation_umaps": true,
            "optimizer": {
                "lr": 0.0001,
                "weight_decay": 1e-6,
                "eps": 0.01
            },
            "step_lr_scheduler": {
                "step_size": 100,
                "gamma": 0.1
            },
            "train_library": true,
            "train_adversarial": true
        },
        "callbacks_args": {
            "model_checkpoint": {
                "monitor": "val_loss",
                "mode": "min"
            },
            "early_stopping": {
                "monitor": "val_loss",
                "patience": 5,
                "mode": "min"
            }
        }
    }
}
