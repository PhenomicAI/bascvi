{
    "datamodule": {
        "data_dir": "./data/train",
        "data_save": "./data/temp",
        "batch_keys": ["study_name","sample_name"],
        "dataset_args": {
            "compute_lib_size": true
        },
        "dataloader_args": {
            "batch_size": 64,
            "shuffle": true,
            "num_workers": 16,
            "pin_memory": true,
            "drop_last": false
        }
    },
    "trainer_module_name": "bascvi_trainer",
    "trainer_class_name": "BAScVITrainer",
    "emb_trainer": {
        "module_name": "bascvi",
        "class_name": "BAScVI",
        "model_args": {
            "n_hidden": 1024,
            "n_latent": 10,
            "n_layers": 4,
            "dropout_rate": 0.1,
            "log_variational": false,
            "normalize_total": true,
            "scaling_factor": 1.0,
            "init_weights": false,
            "batch_emb_dim":0,        
            "use_library": true,
            "use_batch_encoder": true
        },
        "training_args": {
            "n_epochs_kl_warmup": 50,
            "lr_scheduler_metric": "val_loss",
            "optimizer": {
                "lr": 0.0001,
                "weight_decay": 1e-6,
                "eps": 0.01
            },
            "step_lr_scheduler": {
                "step_size": 100,
                "gamma": 0.1
            },
            "train_library": true,
            "train_adversarial": true
        },
        "callbacks_args": {
            "model_checkpoint": {
                "monitor": "val_loss",
                "mode": "min"
            },
            "early_stopping": {
                "monitor": "val_loss",
                "patience": 5,
                "mode": "min"
            }
        }
    },
    "pl_trainer": {
        "max_epochs": 150,
        "accelerator": "gpu",
        "devices": 1,
        "check_val_every_n_epoch": 1,
        "deterministic": true,
        "default_root_dir": "./exp_logs/BaScVI_4L_Both/"
    }
}
